<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- LAYOUTS -->
    <style name="RootFragmentLayout">
        <item name="android:paddingStart">@dimen/paddingMD</item>
        <item name="android:paddingEnd">@dimen/paddingMD</item>
        <item name="android:background">@color/darkBackgroundColor</item>
    </style>

    <!-- APP -->
    <style name="ApplicationTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>

        <item name="actionMenuTextColor">@color/colorPrimary</item>
        <item name="actionMenuTextAppearance">@style/ToolbarTextAppearance</item>
    </style>

    <!-- TOOLBAR -->
    <style name="AppTheme.ActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionMenuTextColor">@color/colorPrimary</item>
        <item name="actionMenuTextAppearance">@style/ToolbarTextAppearance</item>
    </style>
    <style name="ToolbarTextAppearance">
        <item name="android:textSize">@dimen/txtSizeMD</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- TEXT VIEW -->
    <style name="TitleTextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="SubtitleTextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/subtitle_text_size</item>
    </style>

    <style name="DefaultOrangeText">
        <item name="android:textSize">@dimen/txtSizeMD</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="DarkOrangeText">
        <item name="android:textSize">@dimen/txtSizeMD</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <!-- EDIT TEXT -->
    <style name="RoundedWhiteEditText">
        <item name="android:background">@drawable/white_rounded_bordered_bg</item>
        <item name="android:textSize">@dimen/txtSizeMD</item>
        <item name="android:padding">@dimen/paddingSM</item>
    </style>

    <!-- BUTTON -->
    <style name="RoundedBorderedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/white_rounded_bordered_bg</item>
        <item name="android:textSize">@dimen/txtSizeMD</item>
        <item name="android:padding">@dimen/paddingSM</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="RoundedBorderedFilledButton" parent="RoundedBorderedButton">
        <item name="android:background">@drawable/primary_rounded_bg</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RoundedBorderedWithDrawableButton" parent="RoundedBorderedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_right_small</item>
    </style>

    <!-- SCROLL VIEW -->
    <style name="ScrollableBase">
        <item name="android:clipToPadding">false</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">none</item>
    </style>
</resources>