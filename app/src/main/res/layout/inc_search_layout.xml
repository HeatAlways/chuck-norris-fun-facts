<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/searchQueryEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:maxLength="120"
        style="@style/RoundedWhiteEditText"/>

    <ImageView
        android:id="@+id/searchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/searchQueryEditText"
        app:layout_constraintBottom_toBottomOf="@id/searchQueryEditText"
        app:layout_constraintEnd_toEndOf="@id/searchQueryEditText"
        android:layout_marginEnd="@dimen/paddingMD"
        android:src="@drawable/ic_search"
        android:visibility="gone"
        app:tint="@color/colorPrimary"/>

</androidx.constraintlayout.widget.ConstraintLayout>