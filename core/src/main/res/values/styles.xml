<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- LAYOUTS -->
    <style name="RootFragmentLayout">
        <item name="android:background">@color/colorSecondaryVariant</item>
    </style>

    <!-- TOOLBAR -->
    <style name="ToolbarTextAppearance">
        <item name="android:textSize">@dimen/txtSizeMD</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- TEXT VIEW -->
    <style name="TitleTextView">
        <item name="android:textColor">@color/colorOnSecondary</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="SubtitleTextView">
        <item name="android:textColor">@color/colorOnSecondary</item>
        <item name="android:textSize">@dimen/subtitle_text_size</item>
    </style>

    <style name="DefaultPrimaryText">
        <item name="android:textSize">@dimen/txtSizeMD</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="DefaultPrimaryVariantText">
        <item name="android:textSize">@dimen/txtSizeMD</item>
        <item name="android:textColor">@color/colorPrimaryVariant</item>
    </style>

    <style name="DefaultLargePrimaryText">
        <item name="android:textSize">@dimen/txtSizeLG</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="PrimarySecondaryText">
        <item name="android:textSize">@dimen/txtSizeMD</item>
        <item name="android:textColor">@color/colorPrimaryVariant</item>
    </style>

    <!-- EDIT TEXT -->
    <style name="RoundedWhiteEditText">
        <item name="android:background">@drawable/action_rounded_bordered_bg</item>
        <item name="android:textSize">@dimen/txtSizeMD</item>
        <item name="android:padding">@dimen/paddingSM</item>
    </style>

    <!-- BUTTON -->
    <style name="RoundedBorderedButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/action_rounded_bordered_bg</item>
        <item name="android:textSize">@dimen/txtSizeMD</item>
        <item name="android:padding">@dimen/paddingSM</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="RoundedBorderedFilledButton" parent="RoundedBorderedButton">
        <item name="android:background">@drawable/primary_rounded_bg</item>
        <item name="android:textColor">@color/button_on_primary_text_color</item>
    </style>

    <style name="RoundedBorderedWithDrawableButton" parent="RoundedBorderedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_right_small</item>
    </style>

    <!-- SCROLL VIEW -->
    <style name="ScrollableBase">
        <item name="android:clipToPadding">false</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">none</item>
    </style>
</resources>